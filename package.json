{
  "name": "btp-cap-rag-admin-hub",
  "version": "0.1.0",
  "description": "CAP backend proxy for SAP AI Core RAG services â€“ admin and chat capabilities.",
  "dependencies": {
    "@cap-js/sqlite": "^2",
    "@sap-cloud-sdk/connectivity": "^4.4.0",
    "@sap-cloud-sdk/http-client": "^4.4.0",
    "@sap/cds": "^9",
    "express": "^4"
  },
  "devDependencies": {
    "@sap/cds-dk": "^9",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "start:run": "cds run",
    "watch": "cds watch",
    "lint": "npx cds compile srv db >/dev/null",
    "build": "npx cds build && npx mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "auth": "dummy",
      "db": {
        "kind": "sqlite"
      }
    }
  },
  "private": true,
  "env": {
    "AI_USE_LEGACY_PROXY": "false",
    "AI_CORE_DESTINATION_NAME": "AI_CORE_REST_CONN"
  }
}
